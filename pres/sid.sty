\ProvidesPackage{sid}

\usetheme{Darmstadt}
\logo{\includegraphics[width=.1\textwidth]{figs_config/sid_logo.png}}
\definecolor{sidgold}{rgb}{0.7266, 0.5625, 0.1992}
\usecolortheme[named=sidgold]{structure}

\usepackage{bibentry}
\nobibliography* % necessary for using bibentry command

\usepackage{xcolor}
\usepackage[subrefformat=parens]{subcaption}
\captionsetup{compatibility=false}
\usepackage{amsmath}
\usepackage{cases}
\usepackage{caption}

% Change the color of clickable link
\hypersetup{
    colorlinks=true,
    citecolor=cyan,
    linkcolor=cyan
}

\setbeamercolor{author}{fg=white}
\setbeamercolor{institute}{fg=white} 
\setbeamercolor{date}{fg=white} 
\setbeamercolor{page number in head/foot}{fg=white}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}

\setbeamerfont{page number in head/foot}{size=\tiny}
\setbeamerfont{bibliography item}{size=\scriptsize}
\setbeamerfont{bibliography entry author}{size=\scriptsize}
\setbeamerfont{bibliography entry title}{size=\scriptsize}
\setbeamerfont{bibliography entry location}{size=\scriptsize}
\setbeamerfont{bibliography entry note}{size=\scriptsize}

\setbeamertemplate{page number in head/foot}[totalframenumber]
\setbeamertemplate{bibliography item}{\insertbiblabel}
% \setbeamertemplate{headline}{} % suppress the headline 

\setbeamertemplate{itemize/enumerate body begin}{\footnotesize}
\setbeamertemplate{itemize/enumerate subbody begin}{\footnotesize}
\setbeamertemplate{itemize/enumerate subsubbody begin}{\footnotesize}

\setbeamertemplate{enumerate/enumerate body begin}{\footnotesize}
\setbeamertemplate{enumerate/enumerate subbody begin}{\footnotesize}
\setbeamertemplate{enumerate/enumerate subsubbody begin}{\footnotesize}

% Set the baseline font size 
\setbeamerfont{normal text}{size=\scriptsize}
\setbeamerfont{caption}{size=\scriptsize}

% Change the bullet points to default styles 
\setbeamertemplate{itemize items}[default]
\setbeamertemplate{itemize subitem}{$\circ$}
\setbeamertemplate{itemize subsubitem}{$\bullet$}

% ----- New commands --------------------------------------------
% A blank slide with large text in the center
\newcommand{\divisionslide}[1]{
	\begin{frame}[c]{}
	\begin{center}
	\Huge #1
	\end{center}
	\end{frame}
}
% Command to show a citation 
\newcommand{\showcitation}[1]{
    \scriptsize{\cite{#1} \bibentry{#1}}
}
% Command to set a small fontsize for a slide 
\newcommand\FontSmall{\fontsize{8}{10}\selectfont}
